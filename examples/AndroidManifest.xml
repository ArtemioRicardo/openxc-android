<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.openxc.examples" android:versionCode="1" android:versionName="1.0-SNAPSHOT">

  <application android:label="@string/app_name" android:debuggable="true">
      <uses-feature android:name="android.hardware.usb.host"
              android:required="true" />
      <activity android:name=".dashboard.VehicleDashboardActivity">
          <intent-filter>
              <action android:name="android.intent.action.MAIN" />
              <category android:name="android.intent.category.LAUNCHER" />
          </intent-filter>

            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
                <action android:name="android.hardware.usb.action.USB_DEVICE_DETACHED" />
            </intent-filter>

            <meta-data android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                    android:resource="@xml/device_filter" />
      </activity>
      <service android:name="com.openxc.VehicleService" android:exported="true" />
      <service android:name="com.openxc.remote.RemoteVehicleService" android:process=":remote"
              android:exported="true">
          <intent-filter>
              <action android:name="com.openxc.remote.RemoteVehicleServiceInterface" />
          </intent-filter>
      </service>
  </application>

  <supports-screens android:largeScreens="true" android:xlargeScreens="true"
          android:anyDensity="true" />

</manifest>


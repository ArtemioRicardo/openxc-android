<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.openxc" android:versionCode="1" android:versionName="1.0-SNAPSHOT">

  <application android:label="@string/app_name" android:debuggable="true">
      <uses-library android:name="android.test.runner" />
      <activity android:name=".VehicleDashboardActivity">
          <intent-filter>
              <action android:name="android.intent.action.MAIN" />
              <category android:name="android.intent.category.LAUNCHER" />
          </intent-filter>
      </activity>
      <service android:name=".VehicleService" android:exported="true" />
      <service android:name=".remote.RemoteVehicleService" android:process=":remote"
              android:exported="true">
          <intent-filter>
              <action android:name="com.openxc.remote.RemoteVehicleServiceInterface" />
          </intent-filter>
      </service>
  </application>

  <instrumentation android:targetPackage="com.openxc"
    android:name="android.test.InstrumentationTestRunner" />

</manifest>

